<div class='menu' id='Menu'>
    <h1>Our<span>Menu</span></h1>
    <div class='menu_box' style='background-color: white;'>
        {{#if dishs}}
            {{#each dishs}}
                <form action='/carts/create/{{this.id}}' method='post' class='menu_card'>
                    <div class='menu_image'>
                        <img src='/img/dish/{{this.avatar}}' />
                    </div>
                    <div class='small_card'>
                        <i class='fa-solid fa-heart'></i>
                    </div>
                    <div class='menu_info'>
                        <h2>{{this.name}}</h2>
                        <p>
                            {{this.description}}
                        </p>
                        <h3 class='price-old'>{{convertToVND this.price}}</h3>
                        <h3 class='price-new'>{{sale this.price this.sale}}</h3>
                        <div class='number'>
                            <span class='minus'>-</span>
                            <input type='text' name='quanlity' id='quanlity' min='1' max='10' value='1' />
                            <span class='plus'>+</span>
                        </div>
                        <button type='submit' class='menu_btn' style='margin-top: 1.5rem;'>Add to Cart</button>
                    </div>
                </form>
            {{/each}}
        {{/if}}
    </div>
    <div class='pagination'>
        {{pageView _page countPageDish 'dishs'}}
    </div>
</div>
<script>increaseQuanlity('.number')</script>
<link rel='stylesheet' href='/css/listBranch.css' />