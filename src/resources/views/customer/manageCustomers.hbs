<main>
    <div class='head-title'>
        <div class='left'>
            <h1>Customers</h1>
            <ul class='breadcrumb'>
                <li>
                    <a href='#'>Dashboard</a>
                </li>
                <li><i class='fa-solid fa-chevron-right'></i></li>
                <li>
                    <a class='active' href='#'>Customers</a>
                </li>
            </ul>
        </div>
        <a href='#' class='btn-download'>
            <i class='fa-solid fa-download'></i>
            <span class='text'>Download PDF</span>
        </a>
    </div>
    <form class='table' method='post' action='/customers/handle-Action'>
        <div class='table_sidebar'>
            <div class='table_sidebar--add'>
                <button>
                    <a href='/customers/showCreate'>Thêm</a>
                    <i class='fa-solid fa-plus add'></i>
                </button>
                <button>
                    <p class='countTrash'></p>
                    <i class='fa-solid fa-trash trash'></i><a href='/customers/trash'>Thùng Rác</a>
                </button>
            </div>
            <div class='table_sidebar--search'>
                <div class='header-search'>
                    <input type='text' class='search-input' id='search' placeholder='Searching...' />
                    <i class='fa-solid fa-magnifying-glass'></i>
                </div>
                {{!-- <div class='search-contain'>
                    {{#each search}}
                        <a href='?_search&slug={{this._id}}' class='search-contain__product'>
                            <div class='first-product'><img src='/img/user/{{this.images}}' alt='' /></div>
                            <div class='second-product' data-id='{{this._id}}'>
                                <div class='title-product'>{{this.name}}</div>
                                <div class='price-product'>{{this.phone}}</div>
                            </div>
                        </a>
                    {{/each}}
                </div> --}}
            </div>
        </div>
        <div class='selectAction'>
            <div class='form-checkAll'>
                <input type='checkbox' id='checkAll' class='form-checkAll-input' />
                <label for='checkAll' class='label-form-checkAll'>Chọn tất cả</label>
            </div>
            <select name='action' class='select-Action' id='action' required>
                <option value=''>-- Hành động --</option>
                <option value='delete'>Xóa</option>
            </select>
            <button type='submit' class='submit'>Thực hiện</button>
        </div>

        <table>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Name {{{sortable 'fullName' _sort }}}</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Xem</th>
                <th>Sửa</th>
                <th>Xóa</th>

            </tr>
            {{#if customers}}
                {{#each customers}}
                <tr>
                    <td>
                        <div class='form-checkAll'>
                            <input type='checkbox' id='' value='' name='customers' class='form-check-input' />
                        </div>
                    </td>
                    <td>1</td>
                    <td>{{this.fullName}}</td>
                    <td>{{#if this.phone}} {{this.phone}}{{else}}null{{/if}}</td>
                    <td>{{ this.email}}</td>
                    <td>{{this.address}}</td>
                    <td>
                        <a href='/customers/'><i class='fa-solid fa-eye'></i></a>
                    </td>
                    <td>
                        <a href='/customers/'><i class='fa-solid fa-pen'></i></a>
                    </td>
                    <td>
                        <button id='delete-customer' data-id=''><i class='fa-solid fa-trash remove'></i></button>
                    </td>
                </tr>
                {{/each}}
            {{else}}
                <td colspan='10'>Bạn chưa có khách nào?</t>
            {{/if}}
        </table>
        <div class='pagination'>
            <a href=''>&laquo;</a>
            <a href='?page=1'>1</a>
            <a href='?page=2'>2</a>
            <a href='#'>3</a>
            <a href='#'>4</a>
            <a href='#'>5</a>
            <a href='#'>6</a>
            <a href='#'>&raquo;</a>
        </div>
    </form>
</main>